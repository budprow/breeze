rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows a user to read/write ONLY to their own documents sub-collection.
    match /users/{userId}/documents/{docId} {
      allow read, write: if request.auth.uid == userId;
    }
    // This rule allows a user to read/write ONLY to their own quizzes sub-collection.
    match /users/{userId}/quizzes/{quizId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}