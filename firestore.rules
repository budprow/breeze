rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow create;
      allow read, update: if request.auth.uid == userId;
    }

    match /documents/{documentId} {
      allow read, write, delete: if request.auth.uid == resource.data.ownerId;
      allow create: if request.auth.uid != null && request.auth.uid == request.resource.data.ownerId;
    }
    
    match /quizzes/{quizId} {
        allow read: if request.auth != null;
        allow write, delete: if request.auth.uid == resource.data.ownerId;
        allow create: if request.auth.uid != null && request.auth.uid == request.resource.data.ownerId;
        
        match /results/{resultId} {
            allow create: if request.auth.uid != null;
            allow read: if get(/databases/$(database)/documents/quizzes/$(quizId)).data.ownerId == request.auth.uid || resource.data.takerId == request.auth.uid;
        }
    }
  }
}