rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own user profile.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Documents can be created by any authenticated user.
    // They can only be read, updated, or deleted by the user who owns them.
    match /documents/{documentId} {
      allow read, update, delete: if request.auth.uid == resource.data.ownerId;
      allow create: if request.auth.uid != null;
    }
  }
}