rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    match /documents/{restaurantId}/{allPaths=**} {
    
      // This is the new, more robust function.
      // It first CHECKS if the user document exists, then it gets the data.
      function isMember() {
        return request.auth != null && 
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.restaurantId == restaurantId;
      }

      // The rule remains the same, but the function it calls is now safer.
      allow read, write: if isMember();
    }
  }
}