rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Specifically match the path for file uploads
    match /documents/{userId}/{fileName} {
      // Allow a user to read or write a file
      // but ONLY if their authenticated UID matches the {userId} in the path.
      allow read, write: if request.auth.uid == userId;
    }
  }
}
