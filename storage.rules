rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // ** THE FIX: The path was too specific, now it matches all files in the documents folder **
    match /documents/{userId}/{fileId} {
      // Allow read, write, and delete only if the user's ID matches the owner ID in the metadata
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}